<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <h2>Liste des emails</h2>
      <%= turbo_frame_tag "email-list" do %>
        <ul class="list-group">
          <% @new_email ||= Email.new %>
          <li class="list-group-item">
           <%= link_to @new_email.object, emails_path, data:{turbo_frame: "selected-email"} %>
         </li>
         <% @emails.each do |email| %>
          <li class="list-group-item">
           <%= link_to email.object, emails_path, data:{turbo_frame: "selected-email"} %>
          </li>
         <% end %>
        </ul>
        <%= link_to "Recevoir un email", new_email_path, class: "btn btn-primary mt-3", data: { turbo_frame: "email-list" } %>
      <% end %>
    </div>

    <div class="col-md-6">
      <h2>Email sélectionné</h2>
      <div id="selected-email">
        <!-- Le contenu de l'email sélectionné sera affiché ici -->
        <%= render "emails/email", email: @selected_email %>
      </div>
    </div>
  </div>
</div>